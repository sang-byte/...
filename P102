#include <stdio.h>
int main() {
    int arr[] = {1, 2, 3, 4, 5},sum=0;
    int n = sizeof (arr)/sizeof (arr[0]);
    float average;

    for (int i = 0; i < n; i++)
    {
        sum = sum +arr[i];
    }

    average = (float) sum / n;

    printf("The average of the array is: %.2f\n", average);

    return 0;
}
