#include <stdio.h>

int main() {
    int num;

    printf("positive number: ");
    scanf("%d", &num);

    if (num % 3 == 0 && num % 7 == 0) {
        printf("%d is a multiple of both 3 and 7.\n", num);
    }
    else if (num % 3 == 0) {
        printf("%d is a multiple of 3.\n", num);
    }
    else if (num % 7 == 0) {
        printf("%d is a multiple of 7.\n", num);
    }
    else {
        printf("%d is neither a multiple of 3 nor 7.\n", num);
    }

    return 0;
}
