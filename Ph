
#include <stdio.h>

int main() {
    int integerVariable;
    float floatVariable;
    char charVariable;
    
    printf("Size of int: %zu bytes\n", sizeof(integerVariable));
    printf("Size of float: %zu bytes\n", sizeof(floatVariable));
    printf("Size of char: %zu bytes\n", sizeof(charVariable));
    
    return 0;
}
